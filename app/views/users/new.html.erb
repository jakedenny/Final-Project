<div class="sign-up-form">
	<%= form_for @user do |f| %>
		<% if @user.errors.any? %>
			<div class="sign-error-message">
				<h4>Invalid form</h4>
				<ul>
					<% for message in @user.errors.full_messages %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= text_field_tag :email, params[:email], :class => "sign-up-input", :placeholder => "Enter your email" %><br />
		</p>
		<p>
			<%= password_field_tag :password, params[:password], :class => "sign-up-input", :placeholder => "Enter your password" %><br />
		</p>
		<p>
			<%= password_field_tag :password_confirmation, params[:password_confirmation], :class => "sign-up-input", :placeholder => "Re-enter your password" %><br />
		</p>
		<p>
			<%= submit_tag "SUBMIT", :class => "sign-up-submit" %>
		</p>
	<% end %>
</div>

<!-- just testing it records -->
<%= 'You have sign up ' +params[:email].to_s+', congratulations.' %><br><br>
<%= 'Here is your password - ' +params[:password].to_s+'.' %><br><br>
<%= 'Once more for good measure, ' +params[:password_confirmation].to_s+'.' %><br><br>
<!-- just testing it records -->

<% if current_user %>
    <%= link_to root_url %>
<% end %>